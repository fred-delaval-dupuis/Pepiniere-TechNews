<!--menu mobile-->
<nav class="menu-res hidden-lg hidden-md ">
    <div class="menu-res-inner">
        <ul>
            <li {{ active == 'home' ? 'class="current"' }}><a href="{{ url('home') }}">HOME</a></li>
            {% for category in categories %}
                <li {{ active == category.slug ? 'class="current"' }}><a href="{{ url('index_category', {'category': category.slug}) }}">{{ category.title|upper }}</a></li>
            {% endfor %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ url('security_logout') }}">DECONNEXION</a></li>
            {% else %}
                <li {{ active == 'register' ? 'class="current"' }}><a href="{{ url('register') }}">INSCRIPTION</a></li>
                <li {{ active == 'security_login' ? 'class="current"' }}><a href="{{ url('security_login') }}">CONNEXION</a></li>
            {% endif %}

        </ul>
    </div>
</nav>
<div class="page">
    <div class="container">
        <!--header-->
        <header class="header">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ url('home') }}" class="logo">
                        <img alt="Logo" src="{{ asset('images/logo.png') }}" />
                    </a>
                </div>
            </div>
        </header>
        <!--menu-->
        <nav class="menu font-heading">
            <div class="menu-icon hidden-lg hidden-md">
                <i class="fa fa-navicon"></i>
                <span>MENU</span>
            </div>
            <ul class="hidden-sm hidden-xs">
                <li {{ active == 'home' ? 'class="current"' }}>
                    <a href="{{ url('home') }}">Accueil </a>
                </li>
                {% for category in categories %}
                    <li {{ active == category.slug ? 'class="current"' }}>
                        <a href="{{ url('index_category', {'category': category.slug}) }}">{{ category.title|title }}</a>
                    </li>
                {% endfor %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ url('security_logout') }}">DECONNEXION</a></li>
                {% else %}
                    <li {{ active == 'register' ? 'class="current"' }}><a href="{{ url('register') }}">INSCRIPTION</a></li>
                    <li {{ active == 'security_login' ? 'class="current"' }}><a href="{{ url('security_login') }}">CONNEXION</a></li>
                {% endif %}
            </ul>
            <div class="search-icon">
                <div class="search-icon-inner">
                    <i class="fa fa-search"></i>
                </div>
                <div class="search-box">
                    <input type="text" placeholder="Rechercher..." />
                    <button>Lancer</button>
                </div>
            </div>
        </nav>